// THE JAVASCRIPT CODE 


let usernamehtml = document.querySelector("h2"); 
let toggleBtn = document.getElementById("toggleStatusBtn");
let contentmsghtml = document.getElementById("chatArea");
let inputboxmsgcontenthtml = document.getElementById("messageInput");
let sendbtnhtml = document.getElementById("sendBtn");
let statushtml = document.getElementById("statusText");
let msgCountHtml = document.getElementById("messageCount");

function chatSession(username) {
  let isOnline = true;   
  let isTyping = false;
  let messageCount = 0;

  usernamehtml.innerText = username;

  function addSystemMsg(text) {
    contentmsghtml.innerHTML += `
      <div class="text-center text-xs text-gray-400">${text}</div>
    `;
  }

  function addUserMsg(text) {
    contentmsghtml.innerHTML += `
      <div class="flex justify-end">
        <div class="bg-blue-500 text-white px-3 py-2 rounded-lg max-w-[70%] text-sm">
          <p>${text}</p>
        </div>
      </div>
    `;
    
  }

  return {
    toggleStatus() {
      
      isOnline = !isOnline;

      if (isOnline) {
        statushtml.innerText = "online";
        statushtml.className = "text-sm text-green-100";
        toggleBtn.innerText = "Go Offline";
        toggleBtn.className = "bg-white text-green-600 px-3 py-1 rounded-full text-sm font-semibold";
        addSystemMsg(`${username} is online`);
      } else {
        statushtml.innerText = "offline";
        statushtml.className = "text-sm text-red-200";
        toggleBtn.innerText = "Go Online";
        toggleBtn.className = "bg-white text-red-600 px-3 py-1 rounded-full text-sm font-semibold";
        addSystemMsg(`${username} is offline`);
      }
    },

    startTyping() {
      if (!isOnline || isTyping) return;
      isTyping = true;
      statushtml.innerText = "typing...";
    },

    stopTyping() {
      if (!isTyping || !isOnline) return;
      isTyping = false;
      statushtml.innerText = "online";
    },

    sendMessage(message) {
      if (!isOnline) {
        addSystemMsg("You are offline. Message not sent.");
        return;
      }

      if (message.trim() === "") {
        addSystemMsg("Empty message not sent.");
        return;
      }

      messageCount++;
      msgCountHtml.innerText = messageCount;
      addUserMsg(message);
      inputboxmsgcontenthtml.value = "";
    }
  };
}

let shinu = chatSession("Shinu ❤️");
//domm

toggleBtn.addEventListener("click", () => shinu.toggleStatus());

inputboxmsgcontenthtml.addEventListener("focus", () => shinu.startTyping());
inputboxmsgcontenthtml.addEventListener("blur", () => shinu.stopTyping());

sendbtnhtml.addEventListener("click", () => {
  shinu.sendMessage(inputboxmsgcontenthtml.value);
});

inputboxmsgcontenthtml.addEventListener("keydown", (e) => {
  if (e.key === "Enter") {
    shinu.sendMessage(inputboxmsgcontenthtml.value);
  }
});

